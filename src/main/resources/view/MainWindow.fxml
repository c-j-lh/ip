<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane
        xmlns="http://javafx.com/javafx/17"
        xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="ramarama.MainWindow"
        prefHeight="600.0" prefWidth="420.0"
        styleClass="root-pane">
    <children>
        <ScrollPane fx:id="scrollPane"
                    AnchorPane.topAnchor="0.0"
                    AnchorPane.leftAnchor="0.0"
                    AnchorPane.rightAnchor="0.0"
                    AnchorPane.bottomAnchor="43.0"
                    hbarPolicy="NEVER" fitToWidth="true"
                    styleClass="scroll-pane">
            <content>
                <VBox fx:id="dialogContainer" spacing="10" styleClass="dialog-container"/>
            </content>
        </ScrollPane>

        <TextField fx:id="input"
                   prefHeight="41.0"
                   AnchorPane.bottomAnchor="1.0"
                   AnchorPane.leftAnchor="0.0"
                   AnchorPane.rightAnchor="76.0"/>

        <Button fx:id="sendButton"
                text="Send"
                prefHeight="41.0" prefWidth="76.0"
                AnchorPane.bottomAnchor="1.0"
                AnchorPane.rightAnchor="0.0"/>
    </children>
</AnchorPane>
